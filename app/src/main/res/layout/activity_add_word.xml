<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="umitsoftware.learnwords.AddWordActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="20">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="18"
            android:visibility="visible"
            android:background="@color/colorAccent"
            android:elevation="5dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="20"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:layout_weight="6">

                    <TextView
                        android:text="@string/English"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="5"
                        android:textAllCaps="false"

                        android:textSize="16sp"
                        android:paddingTop="10dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:text="@string/Russian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="5"

                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:paddingTop="10dp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6.29">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText"
                        android:layout_weight="5"
                        android:textAlignment="textStart"
                        android:hint="@string/hintEnterE"
                        android:textSize="16sp"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText2"
                        android:layout_weight="13"
                        android:textAlignment="textStart"
                        android:hint="@string/hintEnterR"
                        android:textSize="16sp"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:text="Powered by Yandex.Translate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="@color/link"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:clickable="true"
                android:autoLink="web"
                android:contextClickable="false"
                android:layout_marginRight="5dp"
                android:onClick="goYandex"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="@string/translate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnTranslate"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart" />

                <Button
                    android:text="@string/add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAlignment="textEnd"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
